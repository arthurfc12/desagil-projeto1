<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Button_Morse"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Title_button"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_margin="20dp"
        android:text=""
        android:textSize="20sp" />

    <Button
        android:id="@+id/ButtonMorse"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="500dp"
        android:text="Button Morse"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonGoToList"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/rounded_button" />
    
    <ImageView
        android:id="@+id/listImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/list"
        android:layout_marginTop="415dp"
        android:layout_marginLeft="35dp"/>

    <Button
        android:id="@+id/endChar"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="236dp"
        android:layout_marginBottom="114dp"
        android:text="End Char"
        android:textSize="16sp" />

    <Button
        android:id="@+id/space"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="114dp"
        android:textSize="16sp"
        android:text="Space" />

    <Button
        android:id="@+id/buttonGoToDic1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="25sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="336dp"
        android:background="@drawable/rounded_button" />

</RelativeLayout>