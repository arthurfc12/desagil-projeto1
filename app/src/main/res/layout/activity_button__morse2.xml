<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Button_Morse"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Title_button"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_margin="20dp"
        android:text=""
        android:textSize="20sp" />

    <Button
        android:id="@+id/ButtonMorse"
        android:layout_width="220dp"
        android:layout_height="140dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="450dp"
        android:padding="5dp"
        android:text="Botão Morse"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonGoToList"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/rounded_button" />
    
    <ImageView
        android:id="@+id/listImage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/list"
        android:layout_marginTop="355dp"
        android:layout_marginLeft="25dp"/>

    <Button
        android:id="@+id/endChar"
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:layout_marginTop="392dp"
        android:layout_marginLeft="20dp"
        android:text="Traduzir"
        android:textSize="16sp" />

    <Button
        android:id="@+id/space"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="149dp"
        android:text="Espaço"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonGoToDic1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="25sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="276dp"
        android:background="@drawable/rounded_button" />

    <Button
        android:id="@+id/buttonErase"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="86dp"
        android:text="Apagar" />

    <Button
        android:id="@+id/buttonEraseAll"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:text="Apagar tudo" />

    <Button
        android:id="@+id/buttonSend"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="210dp"
        android:text="Enviar" />

    <ListView
        android:id="@+id/history"
        android:layout_width="155dp"
        android:layout_height="170dp"
        android:layout_marginStart="270dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="7dp"
        android:background="@drawable/border"
        />



</RelativeLayout>